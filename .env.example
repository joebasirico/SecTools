# SecTools Environment Variables
# Copy this file to .env.production and fill in your values

# Rails Environment
RAILS_ENV=production

# Secret Key Base
# Generate with: rails secret
SECRET_KEY_BASE=your_secret_key_base_here

# Database Configuration
# Format: postgresql://username:password@hostname/database_name
DATABASE_URL=postgresql://deploy:your_database_password@localhost/sectools_production

# Rails Static Files (set to true for production without separate CDN)
RAILS_SERVE_STATIC_FILES=true

# Logging
RAILS_LOG_TO_STDOUT=true
RAILS_LOG_LEVEL=info

# Application Settings
PORT=3000
WEB_CONCURRENCY=2
RAILS_MAX_THREADS=5
RAILS_MIN_THREADS=5

# Optional: Email Configuration (for notifications, password resets, etc.)
# SMTP_ADDRESS=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=your_email@gmail.com
# SMTP_PASSWORD=your_app_password
# SMTP_DOMAIN=yourdomain.com
# SMTP_AUTHENTICATION=plain
# SMTP_ENABLE_STARTTLS_AUTO=true

# Optional: Redis (for background jobs, caching)
# REDIS_URL=redis://localhost:6379/0

# Optional: Application Host
# APP_HOST=sectools.yourdomain.com

# Optional: Force SSL
# FORCE_SSL=true

# Optional: Max Upload Size (in MB)
# MAX_UPLOAD_SIZE=10

# Optional: Session Timeout (in minutes)
# SESSION_TIMEOUT=30

# Optional: Rate Limiting
# RATE_LIMIT_REQUESTS=100
# RATE_LIMIT_PERIOD=60

# Optional: API Testing Configuration
# API_SCAN_TIMEOUT=300
# API_SCAN_MAX_ENDPOINTS=50

# Optional: Monitoring/Error Tracking
# SENTRY_DSN=your_sentry_dsn_here
# NEW_RELIC_LICENSE_KEY=your_new_relic_key_here

# Development/Test Only (DO NOT USE IN PRODUCTION)
# RAILS_ENV=development
# DATABASE_URL=postgresql://localhost/sectools_development
