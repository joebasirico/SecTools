<script type="module">
  import markdownit from 'markdown-it';
  import DOMPurify from 'dompurify';

  // Initialize markdown-it with safe defaults
  const md = markdownit({
    html: false,        // Don't allow raw HTML
    linkify: true,      // Auto-convert URLs to links
    typographer: true,  // Enable smart quotes and other typographic replacements
    breaks: true        // Convert line breaks to <br>
  });

  // Render all markdown content
  document.addEventListener('DOMContentLoaded', () => {
    const markdownElements = document.querySelectorAll('.markdown-content[data-markdown]');

    markdownElements.forEach(element => {
      try {
        // Decode the base64-encoded markdown
        const encodedMarkdown = element.getAttribute('data-markdown');
        const markdown = atob(encodedMarkdown);

        // Render markdown to HTML
        const renderedHTML = md.render(markdown);

        // Sanitize the HTML with DOMPurify
        const cleanHTML = DOMPurify.sanitize(renderedHTML, {
          ALLOWED_TAGS: ['p', 'br', 'strong', 'em', 'u', 'code', 'pre', 'a', 'ul', 'ol', 'li', 'h1', 'h2', 'h3', 'h4', 'h5', 'h6', 'blockquote'],
          ALLOWED_ATTR: ['href', 'target', 'rel'],
          ALLOW_DATA_ATTR: false
        });

        // Insert sanitized HTML
        element.innerHTML = cleanHTML;
      } catch (error) {
        console.error('Error rendering markdown:', error);
        // Fall back to plain text if rendering fails
        element.textContent = element.getAttribute('data-markdown');
      }
    });
  });
</script>

